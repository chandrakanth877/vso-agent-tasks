{
    "id": "91128a20-8b98-11e6-ba61-9719eb696426",
    "name": "PublishTestResultsWithTestCases",
    "friendlyName": "Publish Test Results With Testcases",
    "description": "Xplat Publish Test Results to VSTS/TFS With Test Cases",
    "helpMarkDown": "[More Information](http://go.microsoft.com/fwlink/?LinkID=613742)",
    "category": "Test",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Microsoft Corporation",
    "version": {
        "Major": "1",
        "Minor": "0",
        "Patch": "45"
    },
    "demands": [],
    "minimumAgentVersion": "1.83.0",
    "inputs": [
        {
            "name": "testRunner",
            "type": "pickList",
            "label": "Test Result Format",
            "defaultValue": "JUnit",
            "required": true,
            "helpMarkDown": "Format of test result files generated by your choice of test runner e.g. JUnit, VSTest, XUnit V2 and NUnit.",
            "options": {
                "JUnit": "JUnit",
                "NUnit": "NUnit",
                "VSTest": "VSTest",
                "XUnit": "XUnit"
            }
        },
        {
            "name": "testResultsFiles",
            "type": "filePath",
            "label": "Test Results Files",
            "defaultValue": "**/TEST-*.xml",
            "required": true,
            "helpMarkDown": "Test results files path.  Wildcards can be used.  For example, `**/TEST-*.xml` for all xml files whose name starts with TEST-."
        },
        {
            "name": "mergeTestResults",
            "type": "boolean",
            "label": "Merge Test Results",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "To merge results from all test results files to one test run in VSTS/TFS, check this option. To create a test run for each test results file, uncheck this option."
        },
        {
            "name": "testRunTitle",
            "type": "string",
            "label": "Test Run Title",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Provide a name for the Test Run."
        },
        {
            "name": "tfsProjectName",
            "type": "string",
            "label": "Team Project",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Team Project Name"
        },
        {
            "name": "tfsTestPlanName",
            "type": "string",
            "label": "Test Plan Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Test Plan into which the results are published"
        },
        {
            "name": "tfsConfigurationName",
            "type": "string",
            "label": "Configuration Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Testing Configuration Name. Configuration must be created prior"
        },
        {
            "name": "publishRunAttachments",
            "type": "boolean",
            "label": "Upload Test Attachments",
            "defaultValue": "true",
            "required": false,
            "helpMarkDown": "Opt in/out of publishing test run level attachments.",
            "groupName": "advanced"
        },
        {
            "name": "http_proxy",
            "type": "string",
            "label": "HTTP Proxy",
            "defaultValue": "",
            "helpMarkDown": "proxy ",
            "required": false,
            "groupName": "advanced"
        },
        {
            "name": "https_proxy",
            "type": "string",
            "label": "HTTPS Proxy",
            "defaultValue": "",
            "helpMarkDown": "proxy ",
            "required": false,
            "groupName": "advanced"
        },
        {
            "name": "username",
            "type": "string",
            "label": "Username",
            "defaultValue": "",
            "helpMarkDown": "Test Automation username",
            "required": false,
            "groupName": "advanced"
        },
        {
            "name": "token",
            "type": "string",
            "label": "User PAT",
            "defaultValue": "",
            "helpMarkDown": "Test Automation PAT",
            "required": false,
            "groupName": "advanced"
        }
    ],
    "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": true
    },
    {
        "name": "system",
        "displayName": "System Settings",
        "isExpanded": false
    }
    ],
    "instanceNameFormat": "Publish Test Results $(testResultsFiles)",
    "execution": {
        "Node": {
            "target": "publishtestresults.js",
            "argumentFormat": ""
        }
    }
